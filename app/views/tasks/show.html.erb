<div class="task-header">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit task", edit_path(@task), class: 'btn btn-primary' %>
</div>

<div class="details_div">
  <p><%= @task.details %></p>
</div>
<h2><%="#{@task.completed ? '[x] This task is completed!' : '[ ] This task is not completed yet!' }" %></h2>

<p>
  <%= link_to "Delete task", task_path(@task), method: :delete %>
</p>
<p>
  <%= link_to "Go back to tasks", root_path %>
</p>

